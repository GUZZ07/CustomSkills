<Window x:Class="SkillDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillDesigner" xmlns:libs="clr-namespace:SkillDesigner.Libs;assembly=SkillDesigner.Libs" xmlns:Libs="clr-namespace:SkillDesigner.Libs"
		mc:Ignorable="d"
        Title="SkillDesigner" Height="678" Width="1000" MaxHeight="678"
		>
	<Window.Background>
		<ImageBrush ImageSource="/Background.png" Stretch="UniformToFill"/>
	</Window.Background>
	<Grid x:Name="Grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="640"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="640"></RowDefinition>
		</Grid.RowDefinitions>
		<Libs:CoordinateSystem x:Name="CSystem"
				Width="640" Height="640" Margin="0,0,0,0" VerticalAlignment="Stretch"
							   >
		</Libs:CoordinateSystem>
	</Grid>
</Window>
